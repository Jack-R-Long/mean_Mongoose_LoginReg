<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
	<title>Login and Registration</title>
</head>
<body>
	<div class="bg-info shadow-lg">
		<h1>Login and Registration</h1>
		<hr>
	</div>
	<div class="container">
		<div class="row">
			<div class="col border rounded mr-4">
				<!-- tip to easily see objects printed in full instead of [object Object] -->
				<% JSON.stringify(messages) %> 
				<!-- based on the structure of your messages, determine how to display them -->
				<% if(messages.reg) { %>
					<% for (var x of messages.reg) { %>
					<p class="text-danger"><%= x %></p>
					<% } %>
				<% } %>
				<form method="POST" action="/reg_post"class="p-2">
					<div class="form-group row">
						<label for="email">Email</label>
						<input type="email" class="form-control form-control-sm" name="email" placeholder="Enter email">
						<% if(messages.email) { %>
							<% for (var x of messages.email) { %>
							<p class="text-danger"><%= x %></p>
							<% } %>
						<% } %>
					</div>
					<div class="form-group row">
						<label for="first_name">First Name</label>
						<input type="text" class="form-control form-control-sm" name="first_name" placeholder="Enter first name">
						<% if(messages.first_name) { %>
							<% for (var x of messages.first_name) { %>
							<p class="text-danger"><%= x %></p>
							<% } %>
						<% } %>
					</div>
					<div class="form-group row">
						<label for="last_name">Last Name</label>
						<input type="text" class="form-control form-control-sm" name="last_name" placeholder="Enter last name">
						<% if(messages.last_name) { %>
							<% for (var x of messages.last_name) { %>
							<p class="text-danger"> <%= x %></p>
							<% } %>
						<% } %>
					</div>
					<div class="form-group row">
						<label for="password">Password</label>
						<input type="password" class="form-control form-control-sm" name="password">
						<% if(messages.password) { %>
							<% for (var x of messages.password) { %>
							<p class="text-danger"> <%= x %></p>
							<% } %>
						<% } %>
					</div>
					<div class="form-group row">
						<label for="b_day">Birthday</label>
						<input type="date" class="form-control" name="b_day" >
						<% if(messages.b_day) { %>
							<% for (var x of messages.b_day) { %>
							<p class="text-danger"> <%= x %></p>
							<% } %>
						<% } %>
					</div>
					<button type="submit" class="btn btn-outline-info btn-sm">Register</button>
				</form>
			</div>
			<div class="col border rounded mr-4">
				<form method="POST" action="/login_post"class="p-2">
					<div class="form-group row">
						<label for="email">Email</label>
						<input type="email" class="form-control form-control-sm" name="email" placeholder="Enter email">
					</div>
					<div class="form-group row">
						<label for="password">Password</label>
						<input type="password" class="form-control form-control-sm" name="password">
					</div>
					<% if(messages.login) { %>
						<% for (var x of messages.login) { %>
						<p class="text-danger"> <%= x %></p>
						<% } %>
					<% } %>
					<button type="submit" class="btn btn-outline-info btn-sm">Login</button>
				</form>
			</div>
		</div>
	</div>
	<div class="bg-secondary">
		<hr>
	</div>
	
</body>
</html>